@model TaskFlow.Models.Models.ApplicationUser

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h3 class="text-danger">Delete User</h3>
        <p class="lead">Are you sure you want to delete user <strong>@Model.FullName</strong> (@Model.Email)?</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
