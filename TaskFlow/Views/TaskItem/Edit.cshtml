@model TaskFlow.Models.Models.TaskItem
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    var isDeveloper = User.IsInRole("Developer");
}

<h2>Edit Task</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProjectId" />

    <!-- Title -->
    <div class="form-group mb-2">
        <label asp-for="Title"></label>
        @if (isDeveloper)
        {
            <input asp-for="Title" class="form-control" readonly />
        }
        else
        {
            <input asp-for="Title" class="form-control" />
        }
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        @if (isDeveloper)
        {
            <textarea asp-for="Description" class="form-control" readonly></textarea>
        }
        else
        {
            <textarea asp-for="Description" class="form-control"></textarea>
        }
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Deadline -->
    <div class="form-group mb-2">
        <label asp-for="Deadline"></label>
        @if (isDeveloper)
        {
            <input asp-for="Deadline" type="date" class="form-control" readonly />
        }
        else
        {
            <input asp-for="Deadline" type="date" class="form-control" />
        }
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <!-- Estimated Time -->
    <div class="form-group mb-2">
        <label asp-for="EstimatedTime"></label>
        @if (isDeveloper)
        {
            <input asp-for="EstimatedTime" class="form-control" readonly />
        }
        else
        {
            <input asp-for="EstimatedTime" class="form-control" />
        }
        <span asp-validation-for="EstimatedTime" class="text-danger"></span>
    </div>

    <!-- Status -->
    <div class="form-group mb-2">
        <label asp-for="Status"></label>
        @if (isDeveloper)
        {
            <select asp-for="Status" class="form-control" disabled>
                <option value="New" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.New)">New</option>
                <option value="Pending" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.Pending)">Pending</option>
                <option value="InProgress" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.InProgress)">InProgress</option>
                <option value="Finished" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.Finished)">Finished</option>
            </select>
        }
        else
        {
            <select asp-for="Status" class="form-control">
                <option value="New" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.New)">New</option>
                <option value="Pending" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.Pending)">Pending</option>
                <option value="InProgress" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.InProgress)">InProgress</option>
                <option value="Finished" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.Finished)">Finished</option>
            </select>
        }
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <!-- Progress -->
    <div class="form-group mb-2">
        <label asp-for="Progress"></label>
        @if (isDeveloper)
        {
            <input asp-for="Progress" type="number" min="0" max="100" class="form-control" />
        }
        else
        {
            <input asp-for="Progress" type="number" min="0" max="100" class="form-control" />
        }
        <span asp-validation-for="Progress" class="text-danger"></span>
    </div>

    <!-- Assigned User (only Admin/PM) -->
    @if (!isDeveloper)
    {
        <div class="form-group mb-2">
            <label asp-for="AssignedUserId">Assign to Developer</label>
            <select asp-for="AssignedUserId" class="form-control" asp-items="@(new SelectList(ViewBag.Developers, "Id", "FullName", Model.AssignedUserId))">
                <option value="">-- Select Developer --</option>
            </select>
            <span asp-validation-for="AssignedUserId" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-primary">Update</button>
</form>
