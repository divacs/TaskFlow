@model TaskFlow.Models.Models.TaskItem
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create Task";
    var developerSelectList = ViewBag.Developers as List<SelectListItem> ?? new List<SelectListItem>();
    var projectSelectList = ViewBag.Projects as List<SelectListItem> ?? new List<SelectListItem>();
}

<h2>Create Task</h2>

<form asp-action="Create" method="post">
    <!-- Project -->
    <div class="form-group mb-2">
        <label asp-for="ProjectId">Project</label>
        <select asp-for="ProjectId" class="form-control" asp-items="projectSelectList">
            <option value="">-- Select Project --</option>
        </select>
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    <!-- Title -->
    <div class="form-group mb-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Deadline -->
    <div class="form-group mb-2">
        <label asp-for="Deadline"></label>
        <input asp-for="Deadline" type="date" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>

    <!-- Estimated Time -->
    <div class="form-group mb-2">
        <label asp-for="EstimatedTime"></label>
        <input asp-for="EstimatedTime" class="form-control" />
        <span asp-validation-for="EstimatedTime" class="text-danger"></span>
    </div>

    <!-- Status -->
    <div class="form-group mb-2">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="New" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.New)">New</option>
            <option value="Pending" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.Pending)">Pending</option>
            <option value="InProgress" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.InProgress)">InProgress</option>
            <option value="Finished" selected="@(Model.Status == TaskFlow.Models.Models.TaskStatus.Finished)">Finished</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <!-- Progress -->
    <div class="form-group mb-2">
        <label asp-for="Progress"></label>
        <input asp-for="Progress" type="number" min="0" max="100" class="form-control" />
        <span asp-validation-for="Progress" class="text-danger"></span>
    </div>

    <!-- Assigned User -->
    <div class="form-group mb-2">
        <label asp-for="AssignedUserId">Assign to Developer</label>
        <select asp-for="AssignedUserId" class="form-control" asp-items="developerSelectList">
            <option value="">-- Select Developer --</option>
        </select>
        <span asp-validation-for="AssignedUserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>
