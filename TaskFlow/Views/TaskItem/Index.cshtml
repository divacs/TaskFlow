@model IEnumerable<TaskFlow.Models.Models.TaskItem>

@{
    ViewData["Title"] = "Tasks";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    bool isAdmin = User.IsInRole("Administrator");
    bool isPM = User.IsInRole("ProjectManager");
    bool isDeveloper = User.IsInRole("Developer");
}

<h2 class="mb-4">Tasks</h2>

@if (isAdmin || isPM)
{
    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">Add Task</a>
    </p>
}

<div class="row">
    @foreach (var task in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">@task.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@task.Project?.Name</h6>
                    <p class="card-text"><strong>Status:</strong> @task.Status</p>
                    <p class="card-text"><strong>Progress:</strong> @task.Progress %</p>
                    <p class="card-text"><strong>Deadline:</strong> @task.Deadline.ToShortDateString()</p>
                    <p class="card-text"><strong>Assigned To:</strong> @task.AssignedUser?.FullName ?? "Unassigned"</p>

                    @* --- ROLE-BASED BUTTONS --- *@
                    <div class="mb-2">
                        @* Admin i ProjectManager mogu uvek editovati *@
                        @if (isAdmin || isPM)
                        {
                            <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning me-2">Edit</a>

                            <form asp-action="DeleteConfirmed" asp-route-id="@task.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        }
                        else if (isDeveloper && task.AssignedUserId == currentUserId)
                        {
                            @* Developer može editovati samo svoje taskove *@
                            <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                        }
                    </div>

                    <hr />
                    <h6>Comments:</h6>
                    <ul class="list-group list-group-flush mb-2">
                        @foreach (var comment in task.Comments)
                        {
                            <li class="list-group-item py-1">
                                @comment.Content 
                                <small class="text-muted">(@comment.CreatedAt:g)</small>
                            </li>
                        }
                    </ul>

                    <form asp-controller="Comment" asp-action="Create" method="post">
                        <input type="hidden" name="TaskItemId" value="@task.Id" />
                        <div class="mb-2">
                            <textarea name="Content" class="form-control form-control-sm" placeholder="Add comment..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-sm btn-success">Add Comment</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
