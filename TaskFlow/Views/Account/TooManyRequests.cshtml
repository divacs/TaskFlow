@{
    ViewData["Title"] = "Too Many Requests";
}

<div class="text-center mt-5">
    <h1 class="text-danger fw-bold mb-3">Too Many Requests</h1>
    <p class="lead">
        You have requested a password reset too many times in a short period.
    </p>
    <p class="text-muted">
        For security reasons, please wait a few minutes before trying again.
    </p>

    <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-primary mt-3">
        Back to Forgot Password
    </a>
</div>
